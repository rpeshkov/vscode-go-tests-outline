{
    "name": "go-test-outline",
    "displayName": "Go Tests Outline",
    "description": "Visual Studio Code extension that adds custom view with tests of currently opened Go project",
    "version": "0.1.2",
    "author": {
        "name": "Roman Peshkov",
        "email": "peshkovroman@gmail.com"
    },
    "license": "MIT",
    "publisher": "RomanPeshkov",
    "engines": {
        "vscode": "^1.13.0"
    },
    "icon": "images/icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:gotests.package",
        "onView:goTests",
        "onLanguage:go"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/rpeshkov/vscode-go-tests-outline.git"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "gotests.launch",
                "title": "Launch test",
                "icon": "resources/launch.svg"
            },
            {
                "command": "gotests.launch_all",
                "title": "Launch all tests",
                "category": "",
                "icon": "resources/launch-all.svg"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "goTests",
                    "name": "Go tests"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "gotests.launch",
                    "when": "view == goTests",
                    "group": "navigation@1"
                },
                {
                    "command": "gotests.launch_all",
                    "when": "view == goTests",
                    "group": "navigation@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "gotests.launch",
                    "when": "view == goTests && viewItem == gotest"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "@types/xregexp": "^3.0.28",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "xregexp": "^3.2.0"
    }
}
